<Window x:Class="NodicaEditor.ProjectWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NodicaEditor"
        mc:Ignorable="d"
        Title="Project Settings" Height="450" Width="800"
        Background="#1A1A1A"
        BorderThickness="0"
        Loaded="Window_Loaded">
	<Grid Background="#1A1A1A">
		<Grid.RowDefinitions>
			<RowDefinition Height="*"/>
			<RowDefinition Height="Auto"/>
		</Grid.RowDefinitions>
		<TabControl Grid.Row="0">
			<TabControl.Resources>
				<Style TargetType="{x:Type TabItem}">
					<Setter Property="Foreground" Value="LightGray"/>
					<Setter Property="Template">
						<Setter.Value>
							<ControlTemplate TargetType="{x:Type TabItem}">
								<Border x:Name="Border" Background="#101010" BorderBrush="#3C3C3C" BorderThickness="1" CornerRadius="4,4,0,0">
									<ContentPresenter x:Name="ContentSite"
                                        VerticalAlignment="Center"
                                        HorizontalAlignment="Center"
                                        ContentSource="Header"
                                        Margin="12,2,12,2"
                                        RecognizesAccessKey="True"/>
								</Border>
								<ControlTemplate.Triggers>
									<Trigger Property="IsSelected" Value="True">
										<Setter TargetName="Border" Property="Background" Value="#2A2A2A" />
									</Trigger>
									<Trigger Property="IsSelected" Value="False">
										<Setter TargetName="Border" Property="Background" Value="#1A1A1A" />
									</Trigger>
								</ControlTemplate.Triggers>
							</ControlTemplate>
						</Setter.Value>
					</Setter>
				</Style>
			</TabControl.Resources>

			<TabItem Header="General">
				<ScrollViewer VerticalScrollBarVisibility="Auto">
					<Grid Background="#1A1A1A" x:Name="GeneralSettingsGrid">
						<Grid.ColumnDefinitions>
							<ColumnDefinition Width="Auto" />
							<ColumnDefinition Width="*" />
						</Grid.ColumnDefinitions>
						<Grid.RowDefinitions>
							<RowDefinition Height="Auto" />
							<RowDefinition Height="Auto" />
							<RowDefinition Height="Auto" />
							<RowDefinition Height="Auto" />
							<RowDefinition Height="Auto" />
							<RowDefinition Height="Auto" />
							<RowDefinition Height="Auto" />
							<RowDefinition Height="Auto" />
							<RowDefinition Height="Auto" />
							<RowDefinition Height="Auto" />
							<RowDefinition Height="Auto" />
						</Grid.RowDefinitions>

						<!-- Title -->
						<Label Grid.Row="0" Grid.Column="0" Content="Title:" Foreground="LightGray" VerticalAlignment="Center" Margin="10,5,5,5"/>
						<TextBox x:Name="TitleTextBox" Grid.Row="0" Grid.Column="1" Text="Cosmocrush" Foreground="LightGray" Background="#2A2A2A" BorderBrush="#3C3C3C" VerticalAlignment="Center" Margin="5" />

						<!-- Width -->
						<Label Grid.Row="1" Grid.Column="0" Content="Width:" Foreground="LightGray" VerticalAlignment="Center" Margin="10,5,5,5"/>
						<TextBox x:Name="WidthTextBox" Grid.Row="1" Grid.Column="1" Text="1280" Foreground="LightGray" Background="#2A2A2A" BorderBrush="#3C3C3C" VerticalAlignment="Center" Margin="5" />

						<!-- Height -->
						<Label Grid.Row="2" Grid.Column="0" Content="Height:" Foreground="LightGray" VerticalAlignment="Center" Margin="10,5,5,5"/>
						<TextBox x:Name="HeightTextBox" Grid.Row="2" Grid.Column="1" Text="720" Foreground="LightGray" Background="#2A2A2A" BorderBrush="#3C3C3C" VerticalAlignment="Center" Margin="5" />

						<!-- MinWidth -->
						<Label Grid.Row="3" Grid.Column="0" Content="Min Width:" Foreground="LightGray" VerticalAlignment="Center" Margin="10,5,5,5"/>
						<TextBox x:Name="MinWidthTextBox" Grid.Row="3" Grid.Column="1" Text="1280" Foreground="LightGray" Background="#2A2A2A" BorderBrush="#3C3C3C" VerticalAlignment="Center" Margin="5" />

						<!-- MinHeight -->
						<Label Grid.Row="4" Grid.Column="0" Content="Min Height:" Foreground="LightGray" VerticalAlignment="Center" Margin="10,5,5,5"/>
						<TextBox x:Name="MinHeightTextBox" Grid.Row="4" Grid.Column="1" Text="720" Foreground="LightGray" Background="#2A2A2A" BorderBrush="#3C3C3C" VerticalAlignment="Center" Margin="5" />

						<!-- MaxWidth -->
						<Label Grid.Row="5" Grid.Column="0" Content="Max Width:" Foreground="LightGray" VerticalAlignment="Center" Margin="10,5,5,5"/>
						<TextBox x:Name="MaxWidthTextBox" Grid.Row="5" Grid.Column="1" Text="-1" Foreground="LightGray" Background="#2A2A2A" BorderBrush="#3C3C3C" VerticalAlignment="Center" Margin="5" />

						<!-- MaxHeight -->
						<Label Grid.Row="6" Grid.Column="0" Content="Max Height:" Foreground="LightGray" VerticalAlignment="Center" Margin="10,5,5,5"/>
						<TextBox x:Name="MaxHeightTextBox" Grid.Row="6" Grid.Column="1" Text="-1" Foreground="LightGray" Background="#2A2A2A" BorderBrush="#3C3C3C" VerticalAlignment="Center" Margin="5" />

						<!-- ResizableWindow -->
						<Label Grid.Row="7" Grid.Column="0" Content="Resizable Window:" Foreground="LightGray" VerticalAlignment="Center" Margin="10,5,5,5"/>
						<CheckBox x:Name="ResizableWindowCheckBox" Grid.Row="7" Grid.Column="1" IsChecked="True" VerticalAlignment="Center" Margin="5" />

						<!-- AntiAliasing -->
						<Label Grid.Row="8" Grid.Column="0" Content="Anti-Aliasing:" Foreground="LightGray" VerticalAlignment="Center" Margin="10,5,5,5"/>
						<CheckBox x:Name="AntiAliasingCheckBox" Grid.Row="8" Grid.Column="1" IsChecked="True" VerticalAlignment="Center" Margin="5" />

						<!-- Backend -->
						<Label Grid.Row="9" Grid.Column="0" Content="Backend:" Foreground="LightGray" VerticalAlignment="Center" Margin="10,5,5,5"/>
						<TextBox x:Name="BackendTextBox" Grid.Row="9" Grid.Column="1" Text="Raylib" Foreground="LightGray" Background="#2A2A2A" BorderBrush="#3C3C3C" VerticalAlignment="Center" Margin="5" />

						<!-- MainScenePath -->
						<Label Grid.Row="10" Grid.Column="0" Content="Main Scene Path:" Foreground="LightGray" VerticalAlignment="Center" Margin="10,5,5,5"/>
						<TextBox x:Name="MainScenePathTextBox" Grid.Row="10" Grid.Column="1" Text="Res/Scenes/Menu/Menu.ini" Foreground="LightGray" Background="#2A2A2A" BorderBrush="#3C3C3C" VerticalAlignment="Stretch" Margin="5" />
					</Grid>
				</ScrollViewer>
			</TabItem>
			<TabItem Header="Input Map">
				<Grid Background="#1A1A1A">
					<!-- Content for Input Map tab goes here -->
				</Grid>
			</TabItem>
		</TabControl>

		<!-- Apply Button -->
		<Button x:Name="ApplyButton" Content="Apply" Grid.Row="1" Width="75" Margin="0,10,10,10"
                HorizontalAlignment="Right" VerticalAlignment="Bottom" Click="ApplyButton_Click">
			<Button.Style>
				<Style TargetType="Button">
					<Setter Property="Background" Value="#1A1A1A"/>
					<Setter Property="Foreground" Value="LightGray"/>
					<Setter Property="BorderBrush" Value="#3C3C3C"/>
					<Setter Property="BorderThickness" Value="1"/>
					<Setter Property="Template">
						<Setter.Value>
							<ControlTemplate TargetType="Button">
								<Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="4">
									<ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" Margin="10,5,10,5"/>
								</Border>
								<ControlTemplate.Triggers>
									<Trigger Property="IsMouseOver" Value="True">
										<Setter Property="Background" Value="#2A2A2A"/>
									</Trigger>
								</ControlTemplate.Triggers>
							</ControlTemplate>
						</Setter.Value>
					</Setter>
				</Style>
			</Button.Style>
		</Button>
	</Grid>
</Window>